extends ../../layout

block content
  h1= title
  p Welcome to #{title}

  - var dealerships = data
  
  table.entity-list
    tr
      th ID
      th Owner
      th Label
      th AddressID
    - each dealer in dealerships
      tr.row-link(data-href='/dealerships/' + dealer.ID)
        td= dealer.ID
        td= dealer.Owner
        td= dealer.Label
        td= dealer.AddressID

  script.
    $('tr[data-href]').on('click', function() {
      document.location = $(this).data('href');
    });